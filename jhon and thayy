    // Data de inÃ­cio: 1 de julho de 2025 (sem horÃ¡rio especÃ­fico)
    const inicio = new Date('2025-07-01T00:00:00');
    function atualizar() {
      const agora = new Date();
      let diff = agora - inicio;
      const seg = Math.floor(diff / 1000);
      const dias = Math.floor(seg / 86400);
      const horas = Math.floor((seg % 86400) / 3600);
      const mins = Math.floor((seg % 3600) / 60);
      const secs = seg % 60;
      document.getElementById('contador').textContent =
        `Estamos juntos hÃ¡ ${dias} dias, ${horas} horas, ${mins} minutos e ${secs} segundos`;
    }
    atualizar();
    setInterval(atualizar, 1000);
